---
- name: httpd install play
  hosts: prod
  become: true
  vars:
    ansible_sudo_pass: admin
  pre_tasks:
    - name: download python pip script
      get_url:
        url: https://bootstrap.pypa.io/pip/2.7/get-pip.py
        dest: /tmp/get-pip.py
    - name: install python-pip
      command: python2.7 /tmp/get-pip.py
      changed_when: false
    - name: install docker python
      pip: name=docker-py
  tasks:
  - name: install yum and git
    yum:
      name: '{{item}}'
      state: present
    loop:
      - git
      - wget
    when:
      - ansible_facts['distribution'] == "CentOS"
  - name: create httpd container
    docker_container:
        name: webapp
        image: httpd
        ports:
         - "80:80"
        volumes:
         - /home/admin/templates/:/usr/local/apache2/htdocs/index.html
  - name: Copie template to httpd
    copy:
      src: ./templates/
      dest: /home/admin/templates
